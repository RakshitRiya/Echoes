<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:ignore="MissingDefaultResource">


    <VideoView
        android:id="@+id/videoviewdisplay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game1_hint"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/game1_b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_wood_bg"
        android:text="Button"

        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/videoviewdisplay"
        app:layout_constraintVertical_bias="0.089999974" />

    <Button
        android:id="@+id/game1_b2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_wood_bg"
        android:text="Button"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/game1_b1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/game1_b1" />

    <Button
        android:id="@+id/game1_b3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_wood_bg"
        android:text="Button"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/game1_b1"
        app:layout_constraintStart_toStartOf="@+id/game1_b1"
        app:layout_constraintTop_toBottomOf="@+id/game1_b1"
        app:layout_constraintVertical_bias="0.3" />

    <Button
        android:id="@+id/game1_b4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_wood_bg"
        android:text="Button"
        android:textSize="24sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/game1_b3"
        app:layout_constraintEnd_toEndOf="@+id/game1_b2"
        app:layout_constraintHorizontal_bias="0.76"
        app:layout_constraintStart_toStartOf="@+id/game1_b2"
        app:layout_constraintTop_toTopOf="@+id/game1_b3" />

    <Button
        android:id="@+id/game1_replay_button"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/game1_replay"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/game1_b3"
        app:layout_constraintStart_toStartOf="@+id/game1_b3"
        app:layout_constraintTop_toTopOf="@+id/videoviewdisplay"
        app:layout_constraintVertical_bias="0.85" />

    <TextView
        android:id="@+id/game1_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/videoviewdisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <Button
        android:id="@+id/game1_hintButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:background="@drawable/game1_idea"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/game1_replay_button"
        app:layout_constraintEnd_toEndOf="@+id/game1_b4"
        app:layout_constraintStart_toStartOf="@+id/game1_b4"
        app:layout_constraintTop_toTopOf="@+id/game1_replay_button" />

