<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/launcherbg"
    android:layout_height="match_parent">




    <HorizontalScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </HorizontalScrollView>

    <Button
        android:id="@+id/play"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:background="@drawable/play1" />

    <Button
        android:id="@+id/reward"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:background="@drawable/reward"
        android:layout_below="@+id/play"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/shop"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_below="@+id/reward"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/learn" />

    <Button
        android:id="@+id/leader"
        android:layout_width="320dp"
        android:layout_height="85dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/leader"
        android:layout_below="@+id/shop"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
