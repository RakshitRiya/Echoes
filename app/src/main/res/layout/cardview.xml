<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/colorTransparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
app:cardCornerRadius="10dp"
app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/locn_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            android:src="@color/colorAccent" />

        <TextView
            android:id="@+id/locn_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locn_img"
            android:layout_alignStart="@+id/locn_img"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/locn_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locn_name"
            android:layout_alignStart="@+id/locn_img"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:textColorLink="@color/colorBlue" />

        <TextView
            android:id="@+id/locn_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/locn_address"
            android:layout_alignStart="@+id/locn_address"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:autoLink="phone"
            android:textColorLink="@color/colorAccent"
            android:textSize="16sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
