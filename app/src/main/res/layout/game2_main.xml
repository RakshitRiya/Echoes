<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hangmancategoryscreen">

    <!--Actual Content-->

    <ImageView
        android:id="@+id/fruits_cardbtn"
        android:layout_width="181dp"
        android:layout_height="136dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="start_game"
        android:src="@drawable/fruitscard"

        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/card_emotionsbtn"
        app:layout_constraintHorizontal_bias="0.143"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919" />

    <ImageView
        android:id="@+id/card_animalsbtn"
        android:layout_width="181dp"
        android:layout_height="136dp"

        android:layout_marginTop="216dp"
        android:layout_marginEnd="16dp"
        android:onClick="start_game"
        android:src="@drawable/animalscard"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/card_emotionsbtn"
        android:layout_width="181dp"
        android:layout_height="136dp"

        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"

        android:src="@drawable/emotions"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card_animalsbtn"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="66dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="116dp"
        android:text="Categories"
        android:textColor="@color/colorWhite"
        android:textSize="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>