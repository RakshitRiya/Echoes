<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/button_back"
        android:layout_width="@dimen/popup_button_back"
        android:layout_height="@dimen/popup_button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/popup_button_back_bottom"
        android:layout_marginLeft="@dimen/popup_button_back_left"
        android:src="@drawable/button_back" />

    <ImageView
        android:id="@+id/button_next"
        android:layout_width="@dimen/popup_button_back"
        android:layout_height="@dimen/popup_button_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/popup_button_back_bottom"
        android:layout_marginRight="@dimen/popup_button_back_left"
        android:src="@drawable/button_again" />

    <TextView
        android:id="@+id/text"
        android:layout_width="@dimen/popup_button_time_width"
        android:layout_height="@dimen/popup_button_time_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/popup_button_time_margin_right"
        android:layout_marginBottom="@dimen/popup_button_time_margin_bottom"
        android:gravity="center"
        android:shadowColor="#2eaed9"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="4"
        android:text="Are you sure you want to quit?"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/popup_button_time_size" />

</RelativeLayout>